<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:background="@null"
    android:padding="2dp" >
    
    <!-- the innner view - provides the inner rectangle -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:background="@drawable/rounded_background">

        <!-- the icon view -->

        <ImageView
            android:id="@+id/vIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bible_icon"/>

        <!-- the container view for the title and description --><TextView
            android:id="@+id/vTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/version"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />
            

        <TextView
            android:id="@+id/vVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           android:layout_below="@id/vTitle"
            android:text="@string/book"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/ColorMenuText"
            android:textStyle="italic" />
            
            
        
</RelativeLayout>
    
</RelativeLayout>
